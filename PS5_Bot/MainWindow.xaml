<Window x:Class="PS5_Bot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS5_Bot"
        mc:Ignorable="d"
        Title="MainWindow" Height="210" Width="800" Background="#2e2e2e" MinWidth="400">
    <Grid>
        <StackPanel>
            <Button Name="buybtn" BorderBrush="White" Click="Buybtn_OnClick" Content="Check and Buy PS5" Background="#2f2f2f" Foreground="White" Margin="15" FontSize="15"/>
            <TextBox Name="infobox" Background="#2e2e2e" VerticalContentAlignment="Center" BorderBrush="White" Foreground="White" TextWrapping="Wrap" FontSize="35" TextAlignment="Center" IsEnabled="False" VerticalAlignment="Center" Margin="10"/>
            <Button Name="closebtn" BorderBrush="White" Click="Closebtn_OnClick" Content="Close Browser" Background="#2f2f2f" Foreground="White" Margin="15" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
